// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // <--- POSTGRESQL PARA PRODUÇÃO
  url      = env("DATABASE_URL") // Aponta para o Supabase na produção
}

// ===============================================
// AUTH MODELS (Next-Auth)
// ===============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @db.Timestamp(3)
  image         String?
  passwordHash  String? // Para o Credentials Provider
  accounts      Account[]
  sessions      Session[]
  subscriptionStatus SubscriptionStatus @default(FREE)

  hasCompletedOnboarding Boolean @default(false)
  // Relation to the business this user owns
  transactions  Transaction[]
  plannedPurchases PlannedPurchase[]
  categories      Category[]
  createdAt DateTime  @default(now()) @db.Timestamp(3)
  updatedAt DateTime  @updatedAt @db.Timestamp(3)
}

enum SubscriptionStatus {
  FREE
  PREMIUM
  CANCELED
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime @db.Timestamp(3)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime @db.Timestamp(3)

  @@unique([identifier, token])
}

// Enum para os tipos de transação
enum TransactionType {
  INCOME
  FIXED_EXPENSE
  VARIABLE_EXPENSE
  INVESTMENT
}

enum TransactionStatus {
  RECEIVED
  PENDING
  PAID
}

model Category {
  id String @id @default(cuid())
  name String
  normalizedName String
  type TransactionType // Tipo de transação a que esta categoria pertence
  // Relacionamento com as transações
  transactions Transaction[]

  userId         String
  user           User           @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now()) @db.Timestamp(3)
  updatedAt DateTime @updatedAt @db.Timestamp(3)

  @@unique([userId, normalizedName])
}

// Modelo principal de transações
model Transaction {
  id          String    @id @default(cuid())
  description String
  amount      Int     // Usamos INT para valores monetários
  date        DateTime @db.Timestamp(3)
  type        TransactionType // Referencia o nosso enum
  status      TransactionStatus @default(PENDING)
  categoryId  String?
  category Category? @relation(fields: [categoryId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @db.Timestamp(3)
  updatedAt DateTime @updatedAt @db.Timestamp(3)
}

model PlannedPurchase {
  id          String   @id @default(cuid())
  name        String
  description String?
  amount      Int      // Valor em centavos (Ex: R$ 10,00 = 1000)
  deadline    DateTime @db.Timestamp(3)
  status      PlannedPurchaseStatus @default(PENDING)

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now()) @db.Timestamp(3)
  updatedAt   DateTime @updatedAt @db.Timestamp(3)
}

enum PlannedPurchaseStatus {
  PENDING
  PURCHASED
}