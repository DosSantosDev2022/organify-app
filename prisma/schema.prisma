// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Enum para os tipos de transação
enum TransactionType {
  INCOME
  FIXED_EXPENSE
  VARIABLE_EXPENSE
  INVESTMENT
}

// Modelo principal de transações
model Transaction {
  id          String    @id @default(cuid())
  description String
  amount      Int     // Usamos INT para valores monetários
  date        DateTime
  type        TransactionType // Referencia o nosso enum

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}